{
  "exclude": ["packages/*/dist", "packages/*/test", "**/*.stories.*", "**/*.spec.*", "**/*.test.*"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/fixtures": ["fixtures"],
      "~/sb-decorators": [".storybook/decorators"],
      "@darkmagic/react": ["packages/react/src"]
    },
    "noEmit": true
  }
}
